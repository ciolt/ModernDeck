{
  "name": "ModernDeck",
  "short_name": "ModernDeck",
  "description": "The world's most loved Twitter client.",
  "version": "6.0",
  "version_name": "6.0-alpha Build 1",
  "manifest_version": 2,
  
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*.twitter.com/",
    "https://ton.twimg.com/",
    "contextMenus",
    "tabs",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["https://tweetdeck.twitter.com/*"],
      "js": ["extension/MTDLoad.js"],
      "css": ["sources/dev.css"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["extension/MTDBackground.js"]
  },

  "icons": {
      "16": "AppIcon16.png",
      "24": "AppIcon24.png",
      "32": "AppIcon32.png",
      "48": "AppIcon48.png",
      "64": "AppIcon64.png",
      "128": "Icon.png",
      "500": "sources/mtdabout.png"
   },

  "web_accessible_resources": [
    "sources",
    "sources/*"
  ],
  
  "browser_action": {
    "browser_style": false,
    "default_icon": "sources/oneclick/InstaTweetDeck.png",
    "default_title": "Launch TweetDeck",
    "default_popup": "extension/ITD.html"
  },

  "applications": {
    "gecko": {
      "id": "ModernDeck@ModernDeck.com",
      "strict_min_version": "42.0",
      "strict_max_version": "*"
    }
  }
}
